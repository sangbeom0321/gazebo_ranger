<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="ranger_mini_r_wheel">

    <xacro:macro name="ranger_mini_r_wheel" params="wheel_prefix *joint_pose">
        <link name="${wheel_prefix}_wheel_link">
            <inertial>
                <mass value="8" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://ranger_mini_v2/meshes/fr.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
                <geometry>
                    <cylinder length="${wheel_length}" radius="${wheel_radius}" />
                </geometry>
                    <contact>
                         <ode>
                        <min_depth>0.001</min_depth>
                         </ode>
                    </contact>
            </collision>
        </link>

        <joint name="${wheel_prefix}_wheel" type="continuous">
            <parent link="base_link"/>
            <child link="${wheel_prefix}_wheel_link"/>
            <xacro:insert_block name="joint_pose"/>
            <axis xyz="0 -1 0" rpy="0 0 0" />
        </joint>
    </xacro:macro>

</robot>
